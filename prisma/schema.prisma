generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  position  String
  createdAt DateTime @default(now())
}

model Appeal {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  description String
  category    String
  priority    String
  status      Status   @default(PENDING)
  createdAt   DateTime @default(now())
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
}
